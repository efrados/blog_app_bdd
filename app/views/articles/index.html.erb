<% if user_signed_in? %>
  <%= link_to "New Article", new_article_path, class: "btn btn-lg btn-outline-primary mt-3 mb-3", id: "new-article-btn" %>
<% end %>
<% if @articles.empty? %>
  <h1 id="no-articles">No Articles Created</h1>
<% else %>
  <% @articles.each do |article| %>
    <div class= "card mb-3">
      <div class="article-title">
        <%= link_to article.title, article_path(article) %>
      </div>
      <div class="article-body">
        <%= truncate(article.body, length: 500) %>
      </div>
      <div class="author">
        <small>
          Created by: <%= article.user.email %>
        </small>
      </div>
    </div>
  <% end %>
<% end %>