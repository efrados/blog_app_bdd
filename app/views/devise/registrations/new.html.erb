<h2>Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class: "mt-3"}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group row">
      <%= f.label :email,  class:"col-sm-3 col-form-label"%>
      <div class="col-sm">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password,  class:"col-sm-3 col-form-label"%>
      <div class="col-sm">
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
        <% if @minimum_password_length %>
          <small id="passwordHelp" class="form-text text-muted">(<%= @minimum_password_length %> characters minimum)</small>
        <% end %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :password_confirmation,  class:"col-sm-3 col-form-label"%>
      <div class="col-sm">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
      </div>
    </div>

    <div class="form-group offset-md-3">
      <div class="actions mt-4">
        <%= f.submit "Sign up", class: "btn btn-outline-success" %>
      </div>
    </div>

  <% end %>
  <div class="form-group mt-1 offset-md-3">
    <%= render "devise/shared/links" %>
  </div>
